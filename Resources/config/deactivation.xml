<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="naviapps_user.deactivation.form.flow.default"
                 class="Naviapps\Bundle\UserBundle\Form\Flow\DeactivationFormFlow"
                 parent="craue.form.flow">
        </service>

        <service id="naviapps_user.deactivation.form.type" class="Naviapps\Bundle\UserBundle\Form\Type\DeactivationFormType">
            <tag name="form.type" />
            <argument>%fos_user.model.user.class%</argument>
            <argument>%naviapps_user.deactivation.form.validation_groups%</argument>
        </service>

    </services>

</container>
